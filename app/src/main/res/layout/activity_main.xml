<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiled_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.72" />

        <LinearLayout
            android:id="@+id/boxTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/frame"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideH1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View android:layout_width="24dp" android:layout_height="24dp" android:layout_weight="0"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TETRIS"
                android:gravity="center"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="20sp"
                android:letterSpacing="0.1"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/btnHeaderPause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/frame"
                android:backgroundTint="#444444"
                android:backgroundTintMode="src_over"
                android:text="II"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxLines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@id/guideV1"
            app:layout_constraintEnd_toEndOf="@id/guideV2"
            app:layout_constraintTop_toBottomOf="@id/guideH1"
            app:layout_constraintBottom_toTopOf="@id/boxGame"
            app:layout_constraintVertical_chainStyle="packed">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LINES" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/press_start_2p_regular"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:textColor="#FFFFFF" android:textSize="10sp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:fontFamily="@font/press_start_2p_regular"/>
            <TextView android:id="@+id/labelLines" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="000" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/press_start_2p_regular"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/boxGame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/frame"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintDimensionRatio="10:20"
            app:layout_constraintTop_toBottomOf="@id/boxLines"
            app:layout_constraintBottom_toTopOf="@id/guideH2"
            app:layout_constraintStart_toStartOf="@id/guideV1"
            app:layout_constraintEnd_toEndOf="@id/guideV2">

            <com.example.tetrisgiu.GameView
                android:id="@+id/gameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/boxMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideV1"
            app:layout_constraintTop_toTopOf="@id/boxLines"
            app:layout_constraintBottom_toBottomOf="@id/boxLines">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A-TYPE" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxStats"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@drawable/frame"
            android:padding="6dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@id/boxGame"
            app:layout_constraintBottom_toBottomOf="@id/boxGame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideV1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="STATS" android:textColor="#FFFFFF" android:gravity="center" android:textSize="10sp" android:fontFamily="@font/press_start_2p_regular" android:layout_marginBottom="4dp"/>
            <com.example.tetrisgiu.StatsView android:id="@+id/statsView" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/guideV2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/boxLines">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCORE" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular" android:layout_marginBottom="4dp"/>
            <TextView android:id="@+id/scoreText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="000000" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular" android:layout_marginBottom="6dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TOP" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular" android:layout_marginBottom="4dp"/>
            <TextView android:id="@+id/topScoreText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="000000" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame"
            android:gravity="center"
            android:padding="10dp"
            android:minHeight="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guideV2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/boxScore">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NEXT" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular" android:layout_marginBottom="4dp"/>
            <com.example.tetrisgiu.NextBlockView android:id="@+id/nextPieceView" android:layout_width="60dp" android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/frame"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guideV2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/boxNext">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LEVEL" android:textColor="#FFFFFF" android:textSize="8sp" android:fontFamily="@font/press_start_2p_regular"/>
            <TextView android:id="@+id/levelText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold" android:layout_marginTop="4dp" android:fontFamily="@font/press_start_2p_regular"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boxControls"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/frame_pad_rounded"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/guideH2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideControlsCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <View
                android:id="@+id/dpadCenter"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideControlsCenter"/>

            <View
                android:id="@+id/dpadBackground"
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:background="@drawable/bg_dpad_cross"
                app:layout_constraintStart_toStartOf="@id/dpadCenter"
                app:layout_constraintEnd_toEndOf="@id/dpadCenter"
                app:layout_constraintTop_toTopOf="@id/dpadCenter"
                app:layout_constraintBottom_toBottomOf="@id/dpadCenter"/>

            <TextView
                android:id="@+id/btnUp"
                android:layout_width="48dp" android:layout_height="48dp"
                android:background="@drawable/btn_dpad_dark"
                android:text="^"
                android:textColor="#888888" android:textSize="24sp"
                android:gravity="center"
                android:translationY="-2dp"
                android:fontFamily="@font/press_start_2p_regular" android:clickable="true" android:focusable="true"
                app:layout_constraintBottom_toTopOf="@id/dpadCenter"
                app:layout_constraintStart_toStartOf="@id/dpadCenter"
                app:layout_constraintEnd_toEndOf="@id/dpadCenter"/>

            <TextView
                android:id="@+id/btnLeft"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_dpad_dark"
                android:text="&lt;" android:textColor="#888888" android:textSize="20sp"
                android:gravity="center"
                android:translationY="-3dp" android:translationX="-1dp"
                android:fontFamily="@font/press_start_2p_regular" android:clickable="true" android:focusable="true"
                app:layout_constraintEnd_toStartOf="@id/dpadCenter"
                app:layout_constraintTop_toTopOf="@id/dpadCenter"
                app:layout_constraintBottom_toBottomOf="@id/dpadCenter"/>

            <TextView
                android:id="@+id/btnRight"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_dpad_dark"
                android:text="&gt;" android:textColor="#888888" android:textSize="20sp"
                android:gravity="center"
                android:translationY="-3dp" android:translationX="1dp"
                android:fontFamily="@font/press_start_2p_regular" android:clickable="true" android:focusable="true"
                app:layout_constraintStart_toEndOf="@id/dpadCenter"
                app:layout_constraintTop_toTopOf="@id/dpadCenter"
                app:layout_constraintBottom_toBottomOf="@id/dpadCenter"/>

            <TextView
                android:id="@+id/btnDown"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_dpad_dark"
                android:text="v" android:textColor="#888888" android:textSize="18sp"
                android:gravity="center"
                android:translationY="-2dp"
                android:fontFamily="@font/press_start_2p_regular" android:clickable="true" android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/dpadCenter"
                app:layout_constraintStart_toStartOf="@id/dpadCenter"
                app:layout_constraintEnd_toEndOf="@id/dpadCenter"/>

            <View
                android:id="@+id/actionCenter"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@id/guideControlsCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/actionBackground"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_action_pill"
                android:rotation="-45"
                app:layout_constraintStart_toStartOf="@id/actionCenter"
                app:layout_constraintEnd_toEndOf="@id/actionCenter"
                app:layout_constraintTop_toTopOf="@id/actionCenter"
                app:layout_constraintBottom_toBottomOf="@id/actionCenter"/>

            <TextView
                android:id="@+id/btnRotateRight"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_round_red"
                android:text="A" android:textColor="#FFFFFF" android:textSize="22sp"
                android:gravity="center"
                android:translationY="2dp" android:translationX="1dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/press_start_2p_regular" android:clickable="true" android:focusable="true"
                android:layout_marginStart="12dp" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@id/actionCenter"
                app:layout_constraintStart_toEndOf="@id/actionCenter"/>

            <TextView
                android:id="@+id/btnRotateLeft"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_round_red"
                android:text="B" android:textColor="#FFFFFF" android:textSize="22sp"
                android:gravity="center"
                android:translationY="2dp" android:translationX="1dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/press_start_2p_regular" android:clickable="true" android:focusable="true"
                android:layout_marginEnd="12dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/actionCenter"
                app:layout_constraintEnd_toStartOf="@id/actionCenter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/overlayPause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="100dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAUSED"
                android:fontFamily="@font/press_start_2p_regular"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MUSIC VOLUME"
                android:fontFamily="@font/press_start_2p_regular"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"/>
            <SeekBar
                android:id="@+id/seekMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressTint="#FFFFFF"
                android:thumbTint="#FF0000"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SFX VOLUME"
                android:fontFamily="@font/press_start_2p_regular"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"/>
            <SeekBar
                android:id="@+id/seekSfx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressTint="#FFFFFF"
                android:thumbTint="#FF0000"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/btnMenuResume"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame"
                android:backgroundTint="#333333"
                android:backgroundTintMode="src_over"
                android:text="RESUME"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/btnMenuRestart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame"
                android:backgroundTint="#333333"
                android:backgroundTintMode="src_over"
                android:text="RESTART"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/btnMenuMain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame"
                android:backgroundTint="#B71C1C"
                android:backgroundTintMode="src_over"
                android:text="MAIN MENU"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overlayGameOver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="100dp">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME OVER"
                android:fontFamily="@font/press_start_2p_regular"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:id="@+id/btnGameOverRestart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame"
                android:backgroundTint="#FFFFFF"
                android:backgroundTintMode="src_over"
                android:text="TRY AGAIN"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/btnGameOverMain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/frame"
                android:backgroundTint="#333333"
                android:backgroundTintMode="src_over"
                android:text="MAIN MENU"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overlayTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF000000"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:elevation="150dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:id="@+id/mainTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TETRIS"
                android:fontFamily="@font/press_start_2p_regular"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:shadowColor="#FF0000"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="1"
                android:layout_marginBottom="48dp"/>

            <TextView
                android:id="@+id/btnTitleContinue"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/frame"
                android:backgroundTint="#2196F3"
                android:backgroundTintMode="src_over"
                android:text="CONTINUE"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/btnTitleNewGame"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/frame"
                android:backgroundTint="#4CAF50"
                android:backgroundTintMode="src_over"
                android:text="NEW GAME"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overlayLevelSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="160dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START LEVEL"
                android:textColor="#AAAAAA"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/btnLevelMinus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="&lt;"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/txtStartLevel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:gravity="center"
                    android:textColor="#FFFF00"
                    android:textSize="24sp"
                    android:fontFamily="@font/press_start_2p_regular"/>

                <TextView
                    android:id="@+id/btnLevelPlus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="&gt;"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnStartGame"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/frame"
                android:backgroundTint="#4CAF50"
                android:backgroundTintMode="src_over"
                android:text="PLAY"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/press_start_2p_regular"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnBackToTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:gravity="center"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:fontFamily="@font/press_start_2p_regular"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>